.block
  .secondary-navigation
    %ul.wat-cf
      %li.first= link_to "#{t("web-app-theme.list", :default => "List")}", tasks_path
      %li= link_to "#{t("web-app-theme.new", :default => "New")}", new_task_path
      %li.active= link_to "#{t("web-app-theme.show", :default => "Show")}", task_path
  .content
    .inner
      %p
        %b
          = t("activerecord.attributes.task.name", :default => t("activerecord.labels.name", :default => "Name"))
          \:
        = @task.name
      %p
        %b
          = t("activerecord.attributes.task.description", :default => t("activerecord.labels.description", :default => "Description"))
          \:
        = @task.description
      %p
        %b
          = t("activerecord.attributes.task.user_id", :default => t("activerecord.labels.user_id", :default => "User"))
          \:
        = @task.user_id
      %p
        %b
          = t("activerecord.attributes.task.days_total", :default => t("activerecord.labels.days_total", :default => "Days total"))
          \:
        = @task.days_total
      %p
        %b
          = t("activerecord.attributes.task.days_complete", :default => t("activerecord.labels.days_complete", :default => "Days complete"))
          \:
        = @task.days_complete
      .wat-cf
        = link_to image_tag("web-app-theme/icons/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}") + " " + t("web-app-theme.edit", :default=> "Edit"), edit_task_path(@task), :class => "button"
        = link_to image_tag("web-app-theme/icons/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}") + " " + t("web-app-theme.delete", :default => "Delete"), task_path(@task), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}"
- content_for :sidebar, render(:partial => 'sidebar')
