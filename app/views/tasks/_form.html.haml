= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :user_id
    = f.text_field :user_id
  .field
    = f.label :days_total
    = f.text_field :days_total
  .field
    = f.label :days_complete
    = f.text_field :days_complete
  .actions
    = f.submit 'Save'
